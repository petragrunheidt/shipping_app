<%= form_with model: @transport_mode do |trans| %>

<% if @transport_mode.errors.any? %>

  <div class="bg-warning" id="error_explanation">

    <div class="bg-info">
      <% @transport_mode.errors.each do |error| %>
        <% flash.now[:alert] = error.full_message%>
        <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, class: name %>

        <% end %>
   </div>
<% end %>
  </div>
<% end %>
<div class="mb-3">
<dl>
<dt class="form-label"><%= trans.label :name %></dt>
<dt><%= trans.text_field :name %></dt>
<dt class="form-label"><%= trans.label :min_weight %>(kg)</dt>
<dt><%= trans.number_field :min_weight %></dt>
<dt class="form-label"><%= trans.label :max_weight %>(kg)</dt>
<dt><%= trans.number_field :max_weight %></dt>
<dt class="form-label"><%= trans.label :min_distance %>(km)</dt>
<dt><%= trans.number_field :min_distance %></dt>
<dt class="form-label"><%= trans.label :max_distance %>(km)</dt>
<dt><%= trans.number_field :max_distance %></dt>
<dt class="form-label"><%= trans.label :fixed_rate %></dt>
<dt><%= trans.number_field :fixed_rate %></dt>
</dl>
<%= trans.submit 'Enviar', class: "btn btn-primary  btn-m" %>
</div>
<% end %>
