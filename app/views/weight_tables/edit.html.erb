<h1>Editar linha <%= @weight_line.id %> da <%= WeightTable.model_name.human %></h1>
<%= form_with model: @weight_line do |line| %>
<% if @weight_line.errors.any? %>

  <div id="error_explanation">
    <h2>Todos os campos devem ser preenchidos</h2>
    <div>
      <% @weight_line.errors.each do |error| %>
        <% flash.now[:alert] = error.full_message%>
        <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, class: name %>

        <% end %>
   </div>
<% end %>
  </div>
<% end %>
<table>
<tr>
<th><%= line.label :min %></th>
<th><%= line.label :max %></th>
<th><%= line.label :value %></th>
<th><%= line.label :transport_mode_id %></th>
</tr>

<% if @previous.present? %>
<tr>
<th><%= @previous.min %>kg</th>
<th><%= @previous.max %>kg</th>
<th><%= number_to_currency(@previous.value, locale: 'pt-BR') %></th>
</tr>
<% end %>

<tr>
<th><%= line.number_field :min %></th>
<th><%= line.number_field :max %></th>
<th><%= line.number_field :value, step: :any  %></th>
<th><%= line.collection_select :transport_mode_id, @transport_modes, :id, :with_weight_range, prompt:true %></th>
</tr>

<% if @next.present? %>
<tr>
<th><%= @next.min %>kg</th>
<th><%= @next.max %>kg</th>
<th><%= number_to_currency(@next.value, locale: 'pt-BR') %></th>
</tr>
<% end %>

</table>
<p><%= line.submit 'Enviar' %></p>

<% end %>
